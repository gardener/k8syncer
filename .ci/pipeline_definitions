k8syncer:
  base_definition:
    repo: ~

    traits:
      version:
        preprocess: 'inject-commit-hash'
        inject_effective_version: true
      component_descriptor:
        upload: no-upload

    steps:
      verify:
        image: 'golang:1.21'
      image:
        privilege_mode: privileged
        trait_depends:
        - version
        depends:
        - verify
      component:
        trait_depends:
        - version
        depends:
        - verify
        - image

  jobs:
    head-update:
      traits:
        notifications:
          default:
            on_error:
              triggering_policy: 'always'
              recipients:
              - committers
              - codeowners

    pull-request:
      traits:
        pull-request: ~

    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
          release_callback: '.ci/update-version'
          next_version_callback: '.ci/update-version'
          release_notes_policy: disabled
